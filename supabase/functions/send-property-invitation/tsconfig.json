{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "noEmit": true,
    "resolvePackageJsonImports": true
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["./node_modules"]
}